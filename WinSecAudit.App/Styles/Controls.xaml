<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Expander Style for Categories -->
    <Style x:Key="CategoryExpanderStyle" TargetType="Expander">
        <Setter Property="IsExpanded" Value="True"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- Toggle Switch for Settings -->
    <Style x:Key="SettingsToggleStyle" TargetType="ToggleSwitch">
        <Setter Property="Margin" Value="0,8"/>
    </Style>

    <!-- ComboBox for Selections -->
    <Style x:Key="SettingsComboBoxStyle" TargetType="ComboBox">
        <Setter Property="MinWidth" Value="200"/>
        <Setter Property="Margin" Value="0,8"/>
    </Style>

    <!-- InfoBar Styles -->
    <Style x:Key="CriticalInfoBarStyle" TargetType="InfoBar">
        <Setter Property="Severity" Value="Error"/>
        <Setter Property="IsOpen" Value="True"/>
        <Setter Property="IsClosable" Value="False"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="WarningInfoBarStyle" TargetType="InfoBar">
        <Setter Property="Severity" Value="Warning"/>
        <Setter Property="IsOpen" Value="True"/>
        <Setter Property="IsClosable" Value="False"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="SuccessInfoBarStyle" TargetType="InfoBar">
        <Setter Property="Severity" Value="Success"/>
        <Setter Property="IsOpen" Value="True"/>
        <Setter Property="IsClosable" Value="False"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- TeachingTip for Guidance -->
    <Style x:Key="HelpTeachingTipStyle" TargetType="TeachingTip">
        <Setter Property="PreferredPlacement" Value="Bottom"/>
        <Setter Property="IsLightDismissEnabled" Value="True"/>
    </Style>

    <!-- ListView for Findings -->
    <Style x:Key="FindingsListViewStyle" TargetType="ListView">
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="IsItemClickEnabled" Value="True"/>
    </Style>

    <!-- TreeView for Categories -->
    <Style x:Key="CategoryTreeViewStyle" TargetType="TreeView">
        <Setter Property="SelectionMode" Value="Single"/>
    </Style>
</ResourceDictionary>
