<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Severity Colors -->
    <Color x:Key="CriticalColor">#DC3545</Color>
    <Color x:Key="HighColor">#FD7E14</Color>
    <Color x:Key="MediumColor">#FFC107</Color>
    <Color x:Key="LowColor">#17A2B8</Color>
    <Color x:Key="InfoColor">#6C757D</Color>
    <Color x:Key="PassedColor">#28A745</Color>

    <!-- Severity Brushes -->
    <SolidColorBrush x:Key="CriticalBrush" Color="{StaticResource CriticalColor}"/>
    <SolidColorBrush x:Key="HighBrush" Color="{StaticResource HighColor}"/>
    <SolidColorBrush x:Key="MediumBrush" Color="{StaticResource MediumColor}"/>
    <SolidColorBrush x:Key="LowBrush" Color="{StaticResource LowColor}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource InfoColor}"/>
    <SolidColorBrush x:Key="PassedBrush" Color="{StaticResource PassedColor}"/>

    <!-- Chart Colors -->
    <Color x:Key="ChartColor1">#0078D4</Color>
    <Color x:Key="ChartColor2">#00BCF2</Color>
    <Color x:Key="ChartColor3">#7FBA00</Color>
    <Color x:Key="ChartColor4">#FFB900</Color>
    <Color x:Key="ChartColor5">#F25022</Color>

    <!-- Status Colors -->
    <Color x:Key="ScanningColor">#0078D4</Color>
    <Color x:Key="SuccessColor">#28A745</Color>
    <Color x:Key="WarningColor">#FFC107</Color>
    <Color x:Key="ErrorColor">#DC3545</Color>

    <SolidColorBrush x:Key="ScanningBrush" Color="{StaticResource ScanningColor}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}"/>
</ResourceDictionary>
