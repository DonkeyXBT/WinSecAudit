<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="WinSecAudit.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinSecAudit">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Styles/Colors.xaml" />
                <ResourceDictionary Source="Styles/Styles.xaml" />
                <ResourceDictionary Source="Styles/Controls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Global Resources -->
            <x:String x:Key="AppName">WinSecAudit</x:String>
            <x:String x:Key="AppVersion">2.0.0</x:String>

            <!-- Severity Colors -->
            <SolidColorBrush x:Key="CriticalSeverityBrush" Color="#DC3545" />
            <SolidColorBrush x:Key="HighSeverityBrush" Color="#FD7E14" />
            <SolidColorBrush x:Key="MediumSeverityBrush" Color="#FFC107" />
            <SolidColorBrush x:Key="LowSeverityBrush" Color="#17A2B8" />
            <SolidColorBrush x:Key="InfoSeverityBrush" Color="#6C757D" />
            <SolidColorBrush x:Key="PassedSeverityBrush" Color="#28A745" />

            <!-- Accent Colors -->
            <SolidColorBrush x:Key="AccentBrush" Color="#0078D4" />
            <SolidColorBrush x:Key="AccentLightBrush" Color="#60CDFF" />
            <SolidColorBrush x:Key="AccentDarkBrush" Color="#005A9E" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
