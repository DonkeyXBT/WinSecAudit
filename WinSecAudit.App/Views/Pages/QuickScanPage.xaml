<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="WinSecAudit.Views.Pages.QuickScanPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Spacing="8">
            <TextBlock Text="Quick Security Scan" Style="{StaticResource PageHeaderStyle}"/>
            <TextBlock Text="Performs a fast security assessment of the most critical settings."
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="Checks: Password Policy, UAC, Firewall, Windows Defender, SMB Signing, LLMNR, WDigest"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1" Margin="0,24,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Scan Controls -->
            <Border Grid.Row="0" Style="{StaticResource CardStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="StatusText" Text="Ready to scan"
                                   Style="{StaticResource SubtitleTextBlockStyle}"/>
                        <TextBlock x:Name="ProgressText"
                                   Style="{StaticResource CaptionTextBlockStyle}"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                        <ProgressRing x:Name="ScanProgress"
                                      IsActive="False"
                                      Width="32" Height="32"/>
                        <Button x:Name="StartButton"
                                Style="{StaticResource AccentButtonStyle}"
                                Click="StartScan_Click"
                                Content="Start Scan"/>
                        <Button x:Name="CancelButton"
                                Click="CancelScan_Click"
                                Content="Cancel"
                                Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Results -->
            <ScrollViewer Grid.Row="1" Margin="0,16,0,0">
                <StackPanel Spacing="8">
                    <ListView x:Name="FindingsList" SelectionMode="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource FindingCardStyle}" Padding="16">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0"
                                                Width="8" Height="8"
                                                CornerRadius="4"
                                                Margin="0,0,12,0"
                                                VerticalAlignment="Top"
                                                Background="{Binding Severity, Converter={StaticResource SeverityToBrushConverter}}"/>

                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding Check}"
                                                       FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding Description}"
                                                       TextWrapping="Wrap"
                                                       Style="{StaticResource CaptionTextBlockStyle}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding Category}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                       HorizontalAlignment="Right"/>
                                            <TextBlock Text="{Binding Severity}"
                                                       Style="{StaticResource CaptionTextBlockStyle}"
                                                       Foreground="{Binding Severity, Converter={StaticResource SeverityToBrushConverter}}"
                                                       HorizontalAlignment="Right"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
