<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="WinSecAudit.Views.Pages.FullAuditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Full Security Audit" Style="{StaticResource PageHeaderStyle}"/>
            <TextBlock Text="Comprehensive security assessment of all system configurations."
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            <TextBlock Text="Scans all 10 security categories with 100+ individual checks. Estimated time: 2-5 minutes."
                       Style="{StaticResource CaptionTextBlockStyle}"
                       Foreground="{ThemeResource TextFillColorTertiaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,24,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <TextBlock x:Name="StatusText" Text="Ready for full audit" FontWeight="SemiBold"/>
                    <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Margin="0,8,0,0"/>
                    <TextBlock x:Name="CategoryText" Style="{StaticResource CaptionTextBlockStyle}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="8">
                    <Button x:Name="StartBtn" Style="{StaticResource AccentButtonStyle}" Click="Start_Click">Start Full Audit</Button>
                    <Button x:Name="CancelBtn" Click="Cancel_Click" Visibility="Collapsed">Cancel</Button>
                </StackPanel>
            </Grid>
        </Border>

        <ListView Grid.Row="2" x:Name="ResultsList" Margin="0,16,0,0" SelectionMode="None"/>
    </Grid>
</Page>
