<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="WinSecAudit.Views.Pages.BaselinesPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Security Baselines" Style="{StaticResource PageHeaderStyle}"/>
            <TextBlock Text="Compare system configuration against industry security standards." Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,24,0,0">
            <StackPanel Spacing="16">
                <TextBlock Text="Available Baselines" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button x:Name="CisBtn" Click="Cis_Click">CIS Benchmark</Button>
                    <Button x:Name="StigBtn" Click="Stig_Click">DISA STIG</Button>
                    <Button x:Name="MsBtn" Click="Ms_Click">Microsoft Baseline</Button>
                </StackPanel>
            </StackPanel>
        </Border>
        <ListView Grid.Row="2" x:Name="ComparisonList" Margin="0,16,0,0" SelectionMode="None"/>
    </Grid>
</Page>
