<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="WinSecAudit.Views.Pages.LocalPoliciesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Padding="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/><RowDefinition Height="Auto"/><RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Local Security Policy" Style="{StaticResource PageHeaderStyle}"/>
            <TextBlock Text="Audit password policies, account lockout, and security options." Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,24,0,0">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <Button x:Name="ScanBtn" Style="{StaticResource AccentButtonStyle}" Click="Scan_Click">Scan Policies</Button>
                <ProgressRing x:Name="Progress" IsActive="False" Width="24" Height="24"/>
            </StackPanel>
        </Border>
        <ListView Grid.Row="2" x:Name="FindingsList" Margin="0,16,0,0" SelectionMode="None"/>
    </Grid>
</Page>
